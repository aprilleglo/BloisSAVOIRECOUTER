<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">



    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.constraint.Guideline
            android:id="@+id/guidelineLeftGridItemLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="5dp"
            tools:layout_editor_absoluteY="91dp"
            tools:layout_editor_absoluteX="7dp" />

        <android.support.constraint.Guideline
            android:id="@+id/guidelineMiddleGridItemLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="110dp"
            tools:layout_editor_absoluteY="91dp"
            tools:layout_editor_absoluteX="112dp" />


        <android.support.constraint.Guideline
            android:id="@+id/guidelineRightGridItemLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="5dp"
            tools:layout_editor_absoluteY="91dp"
            tools:layout_editor_absoluteX="134dp" />

        <android.support.constraint.Guideline
            android:id="@+id/guidelineTopGridItemLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="5dp"
            tools:layout_editor_absoluteY="96dp"
            tools:layout_editor_absoluteX="2dp" />

        <android.support.constraint.Guideline
            android:id="@+id/guidelineBottomGridItemLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="5dp"
            tools:layout_editor_absoluteY="145dp"
            tools:layout_editor_absoluteX="2dp" />

        <TextView
            android:id="@+id/tvPlaceName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/place_name"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/guidelineLeftGridItemLocation"
            app:layout_constraintTop_toTopOf="@+id/guidelineTopGridItemLocation"
            app:layout_constraintBottom_toTopOf="@+id/tvPlaceAddressItem"
            app:layout_constraintVertical_bias="0.35000002"
            app:layout_constraintRight_toLeftOf="@+id/guidelineRightGridItemLocation" />



        <TextView
            android:id="@+id/tvPlaceAddressItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/place_address"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="@+id/guidelineLeftGridItemLocation"
            app:layout_constraintTop_toBottomOf="@+id/tvPlaceName"
            app:layout_constraintBottom_toTopOf="@+id/tvPlaceLongLatItem" />

        <!--<TextView-->
            <!--android:id="@+id/tvPlaceIDItem"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/tvPlaceAddress"-->
            <!--android:text="Place ID"-->
            <!--android:textSize="14sp"-->
