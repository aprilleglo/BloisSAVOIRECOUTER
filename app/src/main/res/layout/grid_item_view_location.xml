            <!--app:layout_constraintTop_toBottomOf="@+id/tvPlaceAddressItem"-->
            <!--app:layout_constraintBottom_toTopOf="@+id/tvPlaceLongLatItem" />-->


        <TextView
            android:id="@+id/tvPlaceLongLatItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/longitude_and_latitude"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="@+id/guidelineLeftGridItemLocation"
            app:layout_constraintTop_toBottomOf="@+id/tvPlaceAddressItem"
            app:layout_constraintBottom_toTopOf="@+id/guidelineBottomGridItemLocation" />


        <!--<ImageButton-->
            <!--android:id="@+id/ibEditPlaceName"-->
