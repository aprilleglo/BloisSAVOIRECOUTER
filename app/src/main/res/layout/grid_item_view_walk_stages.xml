<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:orientation="horizontal">

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.Guideline
        android:id="@+id/guidelineLeftGridItemStage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="5dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="5dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineMiddleGridItemStage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="110dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="110dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineMiddle2GridItemStage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="168dp" />


    <android.support.constraint.Guideline
        android:id="@+id/guidelineRightGridItemStage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="10dp"
        />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineTopGridItemStage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="5dp"
        />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineBottomGridItemStage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="5dp"
         />

    <ImageButton
        android:id="@+id/button_order_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/guidelineTopGridItemStage"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Button"
        app:srcCompat="@drawable/ic_arrow_upward_black_24dp"/>

    <ImageButton
        android:id="@+id/button_order_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:srcCompat="@drawable/ic_arrow_downward_black_24dp"

        app:layout_constraintBottom_toTopOf="@+id/guidelineBottomGridItemStage"/>

    <TextView
        android:id="@+id/walk_stage_order_number"
        app:layout_constraintLeft_toLeftOf="@+id/button_order_minus"
        app:layout_constraintRight_toRightOf="@+id/button_order_minus"
        app:layout_constraintTop_toBottomOf="@+id/button_order_minus"
        app:layout_constraintBottom_toTopOf="@id/button_order_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="24dp"
        android:maxLines="1"
        android:textStyle="bold"
        />


    <ImageView
        android:id="@+id/walk_stage_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="2dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        app:layout_constraintTop_toTopOf="@+id/guidelineTopGridItemStage"
        app:layout_constraintLeft_toRightOf="@+id/button_order_plus"
        app:layout_constraintBottom_toTopOf="@+id/guidelineBottomGridItemStage" />

    <ImageView
        android:id="@+id/walk_stage_play_pause"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/walk_stage_image"
        app:layout_constraintLeft_toRightOf="@+id/walk_stage_image"
        app:srcCompat="@drawable/ic_play_arrow_black_24dp" />

    <!--<ImageView-->
        <!--android:id="@+id/pause_play"-->
        <!--android:layout_width="48dp"-->
        <!--android:layout_height="48dp"-->
        <!--app:layout_constraintBottom_toBottomOf="@+id/guidelineBottomGridItemStage"-->
        <!--app:layout_constraintLeft_toLeftOf="@+id/guidelineMiddleGridItemStage"-->
        <!--android:tint="@color/colorAccent"-->
        <!--app:srcCompat="@drawable/ic_pause_black_24dp" />ic_pause_black_24dp-->

    <TextView
        android:id="@+id/walk_stage_title"
        app:layout_constraintTop_toTopOf="@+id/sound_image"
        app:layout_constraintBottom_toTopOf="@+id/walk_stage_LL"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineMiddle2GridItemStage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/guidelineRightGridItemStage" />

    <LinearLayout
        android:id="@+id/walk_stage_LL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        app:layout_constraintLeft_toRightOf="@+id/walk_stage_play_pause"
        app:layout_constraintRight_toLeftOf="@+id/guidelineRightGridItemStage"
        app:layout_constraintBottom_toTopOf="@+id/guidelineBottomGridItemStage"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/walk_stage_place_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorAccent"
            android:paddingTop="5dp"
            android:gravity="right"
            android:text="@string/place_name"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />


        <ImageView
            android:id="@+id/icon_place_marker"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_place_black_24dp" />




    </LinearLayout>


</android.support.constraint.ConstraintLayout>


</LinearLayout>
