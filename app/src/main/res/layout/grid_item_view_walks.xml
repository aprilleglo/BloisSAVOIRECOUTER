<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:orientation="horizontal">

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.Guideline
        android:id="@+id/guidelineLeftWalkItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="5dp"
        />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineMiddleWalkItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="110dp"
        />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineMiddle2WalkItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="190dp"
        />


    <android.support.constraint.Guideline
        android:id="@+id/guidelineRightWalkItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="10dp"
        />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineTopWalkItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="5dp"
         />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineBottomWalkItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="5dp"
        tools:layout_editor_absoluteY="499dp"
        tools:layout_editor_absoluteX="0dp" />


    <ImageView
        android:id="@+id/walk_grid_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:paddingBottom="5dp"
        android:paddingTop="2dp"
        app:layout_constraintDimensionRatio="3:1"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="@+id/guidelineTopWalkItem"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


    <TextView
        android:id="@+id/walk_grid_title"
        app:layout_constraintTop_toBottomOf="@+id/walk_grid_image"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineLeftWalkItem"
        app:layout_constraintRight_toRightOf="@+id/guidelineRightWalkItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/walk_info_practique"
        app:layout_constraintTop_toBottomOf="@+id/walk_grid_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
         />

    <LinearLayout
        android:id="@+id/walk_linearlayout"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/walk_info_practique"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineLeftGridItem"
        android:orientation="horizontal"
        >


        <ImageView
            android:id="@+id/walk_grid_icon_accessibility"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_accessible_black_24dp" />


        <TextView
            android:id="@+id/walk_accessibility"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorAccent"
            android:text="walk acesss text"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />

    </LinearLayout>

    <ImageButton
        android:id="@+id/walk_grid_moreInfo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/white"
        android:tint="@color/colorAccent"
        app:srcCompat="@drawable/ic_more_horiz_black_24dp"
        android:scaleType="fitCenter"
        app:layout_constraintRight_toLeftOf="@+id/guidelineRightWalkItem"
        app:layout_constraintBottom_toTopOf="@+id/guidelineBottomWalkItem" />


</android.support.constraint.ConstraintLayout>


</LinearLayout>
